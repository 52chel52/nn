body {
    font-family: sans-serif;
    background-color: black;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    margin-bottom: 20px;
}

.button {
    background-color: #36bbce;
    color: black;
    text-decoration: none;
    padding: 15px;
    font-size: 24px;
    border-radius: 10px;
    display: block;
}

nav {
    border-top: 5px solid white;
    border-bottom: 5px solid white;
    padding: 25px 100px 25px 95px;
    display: flex;
    justify-content: space-between;
}

.nav-link {
    font-size: 24px;
    color: white;
    text-decoration: none;
    display: block;
}

h1 {
    text-align: center;
    color: white;
    font-size: 36px;
    margin-top: 45px;
    margin-bottom: 40px;
    
}

.post-text {
    font-size: 24px;
}

.info {
    display: flex;
    flex-wrap: wrap;
    max-width: 1100px;
    margin: 0 auto;
}

.post {
    background-color: white;
    padding: 15px 45px 30px 45px;
    width: 400px;
    margin: 20px;
    position: relative;
}

.article-but {
    text-decoration: none;
    background-color: #133aac;
    color: white;
    font-size: 24px;
    text-align: center;
    padding: 10px 75px 10px 75px;
    display: block;
}

.full-image {
    margin: 100px 0px 100px 0px;
}

.social {
    display: block;
    width: 30px;
}

footer {
    background-color: white;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 30px 30px 20px 45px;
}

.footer-text {
    font-size: 24px;
    margin-right: 30px;
}

.footer-text span {
    color: #850AE5;
    font-weight: bolder;
}
.social:hover{
    background-color: #133aac;
    
    border-bottom: 6px double red;

}
.vk{
    position:fixed;
    background-color: #133aac;
    width:150px;
    border:double 1px red;
    right:0px;
    top:150px;
    
}
.iphone{
    position:relative;
}
.fff{
    position:relative;
    width: 50px;
    height: 50px;
    right: -360px;
    top:-310px;
}
h1::after {
    content: '';
    background-image: url('https://i.imgur.com/1SkHABI.png');
    background-size: contain; 
    display: inline-block;
    height: 100px;
    width: 100px;
    position: relative;
    bottom:-25px;
}
h1::before {
    content: '';
    background-image: url('https://i.imgur.com/1SkHABI.png');
    background-size: contain; 
    display: inline-block;
    height: 100px;
    width: 100px;
    position: relative;
    bottom:-25px;
    left:0px;
}

.tel::before{
    content: '';
    background-image: url('https://img.freepik.com/free-vector/phone_53876-25489.jpg?ga=GA1.1.309154350.1745736265&semt=ais_hybrid&w=740');
    background-size: contain; 
    display: inline-block;
    height: 50px;
    width: 50px;
    bottom:-10px;
    left:3px;
    position:relative;
}
.address::before{
    content: '';
    background-image: url('https://img.freepik.com/free-vector/we-are-open-shop-young-pine-trees_23-2148548812.jpg?ga=GA1.1.309154350.1745736265&semt=ais_hybrid&w=740');
    background-size: contain; 
    display: inline-block;
    height: 50px;
    width: 50px;
    bottom:-10px;
    left:0px;
    position:relative;
}
.nav-link:hover{
    color: #133aac;
    border:4px double   red ;
}
.button:hover{
    color:wheat;
    background-color: red;
}
.post:hover{
    background-color: #850AE5;
    color:wheat;
}


